name: ci
on:
  push:
  pull_request:
jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        sanitize: [OFF, ON]
    steps:
      - uses: actions/checkout@v4
      - name: Configure
        run: cmake -S . -B build -DBDI_BUILD_TESTS=ON -DBDI_SANITIZE=${{ matrix.sanitize }}
      - name: Build
        run: cmake --build build -j
      - name: Run hello
        run: ./build/bdi_hello
